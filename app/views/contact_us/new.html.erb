  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :messages %>
    <%= text_area_tag :messages %>
  </div>
  <%= submit_tag "Contact Us!" %>
<% end %>
