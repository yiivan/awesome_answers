    <%= label_tag :full_name %>
    <%= text_field_tag :full_name, nil, {placeholder: "John Smith"} %>
  </div>
  <%# the above generates %>
  <!--
  <div>
    <label for="full_name">Full name</label>
    <input type="text" name="full_name" id="full_name">
  </div>
